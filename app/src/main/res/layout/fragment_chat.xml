<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.ChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test_tekst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To jest tytul. Jego trzeba stad wyniesc, a i tak w kodzie podmienie ten tekst" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:visibility="visible" >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/test_buton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To jest miejsce na klikawke i wysylanie komunikatow" />
    </LinearLayout>

</FrameLayout>